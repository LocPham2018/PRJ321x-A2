<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    <welcome-file-list>
        <welcome-file>/page1.jsp</welcome-file>
        <welcome-file>/page2.jsp</welcome-file>
        <welcome-file>/login.jsp</welcome-file>
        <welcome-file>/CourseForm.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login.jsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>page1</servlet-name>
        <jsp-file>/page1.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>page1</servlet-name>
        <url-pattern>/page1.jsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>page2</servlet-name>
        <jsp-file>/page2.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>page2</servlet-name>
        <url-pattern>/page2.jsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CourseForm</servlet-name>
        <jsp-file>/CourseForm.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>CourseForm</servlet-name>
        <url-pattern>/CourseForm.jsp</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
